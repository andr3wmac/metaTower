$('#dFileman').dialog({
	autoOpen: false, 
	minWidth: 400,
	minHeight: 250
});

var last_path = "";
var current_path = "";
function switchPath(path) {
	if ( current_path != "" ) last_path = current_path;
	current_path = path;
	$('#fmanPath').val(path);
	cmd("fileman.jman_switchPath(session, \"" + path + "\")"); 
};

function goDown()
{
	var path_pieces = current_path.split("/");
	if ( path_pieces[path_pieces.length-1] == "" ) path_pieces.pop();
	path_pieces.pop();
	switchPath(path_pieces.join("/") + "/");
}

function goHome()
{
	if ( home_path )
	{
		switchPath(home_path);
	}
}
